<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventHub</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include('partials/header') %>

<h1>Upcoming Events</h1>
<main>
    <div class="events-container">
        <% if(upcomingEvents.length > 0) { %>
            <% upcomingEvents.forEach(event => { %>
                <div class="event-card">
                    <% if(event.dataValues.image) { %>
                        <img src="<%= event.dataValues.image %>" alt="Event Image">
                    <% } else { %>
                        <img src="\images\default-event.png" alt="Default Image">
                    <% } %>
                    <div class="event-info">
                        <h3><%= event.dataValues.eventName %></h3>
                        <p>Date: <%= event.dateTime.toDateString() %></p>
                        <p>Time: <%= event.dateTime.toTimeString().split(' ')[0] %></p>
                        <p>Location: <%= event.dataValues.location %></p>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No upcoming events to display.</p>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>
</body>
</html>
